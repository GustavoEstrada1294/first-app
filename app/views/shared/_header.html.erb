<nav class="flex justify-between p-3 bg-blue-800">
    <ul class="flex gap-2 items-center">
        <li class="font-bold text-lg text-white"><%= link_to 'Rails App', root_path %></li>
       
        <% if current_user && current_user.profile.present? %>
            <li><%= link_to 'Articulos', articles_path, class:"btn-primary" %></li>
            <li><%= link_to 'Usuarios', users_path, class:"btn-primary" %></li>
            <li><%= link_to 'Categories', categories_path, class:"btn-primary" %></li>
            <li class="font-bold text-white" ><%= current_user.profile.role %></li>
            <% unless current_user.profile.member? %>
                <li><%= link_to "New category", new_category_path, class:"btn-primary"  %></li>
                <li><%= link_to 'Nuevo Articulo', articles_new_path, class:"btn-primary" %></li>  
            <% end %>
        <% end %>
    </ul>
    <ul class="flex gap-2 items-center">
        <% if current_user %>      
            <li><%= button_to 'Cerrar Sesion', logout_path, method: :delete, class:"btn-primary bg-red-700" %></li>
            <li class="text-white text-sm text-semibold"><%= current_user.email%></li>
        <% else %>
            <li><%= link_to 'Entrar', login_path, class:"btn-primary bg-green-700" %></li>
            <li><%= link_to 'Registrarse', signup_path, class:"btn-primary bg-blue-600" %></li>
        <% end %>
    </ul>
</nav>