<div id="<%= dom_id comment %>" class="border-2 border-gray-200 flex p-2 m-2 justify-between items-center rounded-lg">
  
  <div class="flex flex-col">  
    <span class="font-semibold text-sm"><%= comment.text %><br>
    <span class="font-semibold text-xs"><%= comment.user.email %><span>
  </div>

  <% if current_user == comment.user %>
    <div>
      <%= button_to 'Delete comment', comment_path(comment), class: "btn-primary bg-red-800", method: :delete, form: { data: { turbo_confirm: 'are you sure?' } } %>
    </div>
  <% end %>

</div>
